<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title><%= yield(:title) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- ================== BEGIN core-css ================== -->
    <%= stylesheet_link_tag "adminpage/css/vendor.min.css", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "adminpage/css/app.min.css", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <!-- ================== END core-css ================== -->

</head>

<body>
    <!-- BEGIN #app -->
    <div id="app" class="app">
        <%= render partial: "shared/headeradminpage" %>
        <!-- BEGIN #content -->
        <div id="content" class="app-content">
            <%= yield %>
        </div>
        <!-- END #content -->

        <!-- BEGIN btn-scroll-top -->
        <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
        <!-- END btn-scroll-top -->
    </div>
    <!-- END #app -->

    <!-- ================== BEGIN core-js ================== -->
    <script src="<%= javascript_path 'adminpage/js/vendor.min.js'%>"></script>
    <script src="<%= javascript_path 'adminpage/js/app.min.js'%>"></script>
    <!-- ================== END core-js ================== -->

    <!-- ================== BEGIN page-js ================== -->
    <script src="<%= javascript_path 'adminpage/plugins/apexcharts/dist/apexcharts.min.js'%>"></script>
    <script src="<%= javascript_path 'adminpage/js/demo/dashboard.demo.js'%>"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.ckeditor.com/4.19.0/basic/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- ================== END page-js ================== -->
